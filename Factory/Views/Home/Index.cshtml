@{
  Layout = "_Layout";
}

@using Factory.Models;
<h4>Engineers</h4>
@if (Model["engineers"].Length == 0)
{
  <p>No engineers have been added.</p>
} 
<ul>
  @foreach (Engineer fish in Model["engineers"])
  {
    <li>@Html.ActionLink(@fish.EngineerName, "Details", "Engineers", new { id = @fish.EngineerId})</li>
  }
</ul>

<h4>Machines</h4>
@if (Model["machines"].Length == 0)
{
  <p>No machines have been added.</p>
} 
<ul>
  @foreach (Machine trout in Model["machines"])
  {
    <li>@Html.ActionLink(@trout.MachineName, "Details", "Machines", new { id = @trout.MachineId})</li>
  }
</ul>

<p>@Html.ActionLink("See all Engineers", "Index", "Engineers")</p>
<p>@Html.ActionLink("See all Machines", "Index", "Machines")</p>
